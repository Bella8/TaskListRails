
<%= form_for @task do |f| %>
  <p><%= f.label :Title %>:</p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :Description %>:</p>
  <p><%= f.text_field :description %></p>
  <p><%= f.label :Completed %>:</p>
  <p><%= f.date_field :completed_at %></p>
  <p><%= f.submit "Submit" %></p>
<% end %>
